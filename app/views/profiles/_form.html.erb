<div class ="flex justify-center items-center h-full">
  <div data-controller="profile">
    <%= form_with(model: @profile) do |form| %>
      <div class="flex flex-col text-white p-4 gap-3">
        <div class ="flex flex-col gap-1">
          <%= form.label :avatar, style: "display: block" %>
          <%= form.file_field :avatar, class: "hidden", id: "avatar", data: { action: "change->profile#displayFileName" } %>
          <label for="avatar" class="bg-blue-400 w-fit mt-5 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full">Choose file</label>
          <span id="file-name"></span>
        </div>
        <div>
          <%= form.label :first_name, style: "display: block" %>
          <%= form.text_field :first_name, class:"bg-transparent border-none rounded-full text-gray-400 font-medium text-lg w-full", placeholder:"First name" %>
        </div>
        <div>
          <%= form.label :last_name, style: "display: block" %>
          <%= form.text_field :last_name, class:"bg-transparent border-none rounded-full text-gray-400 font-medium text-lg w-full", placeholder:"Last name" %>
        </div>
        <div>
          <%= form.submit "Save",class:"bg-blue-400 w-fit mt-5 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full"%>
        </div>
      </div>
    <% end %>
  </div>
</div>