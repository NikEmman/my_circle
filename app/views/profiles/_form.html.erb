<div data-controller="profile">
  <%= form_with(model: @profile) do |form| %>
    <div class="flex flex-col gap-3">
      <div>
        <%= form.label :avatar,"Upload a picture", style: "display: block" %>
        <%= form.file_field :avatar, class: "hidden", id: "avatar", data: { action: "change->profile#displayFileName" } %>
        <label for="avatar" class="block p-2.5 text-sm rounded-lg border size-fit  bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500 cursor-pointer">Choose file</label>
        <span id="file-name"></span>
      </div>
      <div>
        <%= form.label :first_name, style: "display: block" %>
        <%= form.text_area :first_name, class:"block p-2.5 text-sm  rounded-lg border bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500", placeholder:"First name" %>
      </div>
      <div>
        <%= form.label :last_name, style: "display: block" %>
        <%= form.text_area :last_name, class:"block p-2.5 text-sm  rounded-lg border bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500", placeholder:"Last name" %>
      </div>
      <div>
        <%= form.submit "Save",class:"rounded-xl bg-slate-600 p-2 text-teal-400 hover:bg-slate-400 hover:text-teal-700"%>
      </div>
    </div>
  <% end %>
</div>