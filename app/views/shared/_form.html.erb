<div data-controller = "char-limiter" >
  <%= form_with(model: model, local: true)  do |form| %>
    <% model_name = model.class.name == "Post" ? "Post" : "Comment"%>
    <%= form.text_area :body, data: { char_limiter_target: "input", action: "input->char-limiter#checkInput" }, rows:"4" , class:"block p-2.5 w-full text-sm  rounded-lg border bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500", placeholder:"Type your thoughts..."%>
    <div data-char-limiter-target="warning" style="color: red;"></div>
    <%= form.submit "#{model_name}", data: { char_limiter_target: "submit" }, class:"rounded-xl bg-slate-600 p-2 text-teal-400 hover:bg-slate-400 hover:text-teal-700" %>
  <% end %>
</div>
