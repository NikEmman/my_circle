<div data-controller = "char-limiter">
  <%= form_with(model: model, local: true, class:"grid gap-2")  do |form| %>
    <div class="flex flex-col">
      <%= form.text_area :body, data: { char_limiter_target: "input", action: "input->char-limiter#checkInput" }, rows:"4" , class:"block p-2.5 w-full text-sm  rounded-lg bg-sky-800 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500", placeholder:"Type your thoughts..."%>
      <div data-char-limiter-target="warning" class="text-red-600"></div>
      <%= form.submit "Post", data: { char_limiter_target: "submit" }, class:"bg-blue-400 self-end w-48 mt-5 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full"%>
    </div>
  <% end %>
</div>
