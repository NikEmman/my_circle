<div data-controller = "char-limiter">
  <%= form_with(model: model, local: true, class:"grid gap-2 flex justify-items-end")  do |form| %>
    <%= form.text_area :body, data: { char_limiter_target: "input", action: "input->char-limiter#checkInput" }, rows:"2" , class:"block p-2.5 w-2/5 text-sm  rounded-lg border bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500", placeholder:"Write a comment..."%>
    <div data-char-limiter-target="warning" class="text-red-600"></div>
    <%= form.submit "Comment", data: { char_limiter_target: "submit" }, class:"min-w-fit rounded-xl bg-slate-600 p-2  w-1/5 text-teal-400 hover:bg-slate-400 hover:text-teal-700"%>
  <% end %>
</div>
