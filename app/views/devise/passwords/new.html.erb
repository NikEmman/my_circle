<h2 class = "text-center text-4xl border-b-2 border-slate-200" >Forgot your password?</h2>
<div class ="flex justify-center items-center h-full">
  <div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="flex flex-col  text-white p-4 gap-3">
        <div class="flex flex-col gap-3">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"bg-transparent rounded-full w-60 text-slate-200 font-medium text-lg w-full", placeholder:"example@mail.com"%>
          </div>
          <div class="actions">
            <%= f.submit "Send me reset password instructions", class:"bg-blue-400 w-fit mt-5 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full" %>
          </div>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
