<h2 class = "text-center text-4xl border-b-2 border-slate-200" >Forgot your password?</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="flex flex-col gap-3">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"mail@example.com", class:"block p-2.5 text-sm  rounded-lg border bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500"%>
    </div>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:"rounded-xl bg-slate-600 p-2 text-teal-400 hover:bg-slate-400 hover:text-teal-700" %>
    </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>
