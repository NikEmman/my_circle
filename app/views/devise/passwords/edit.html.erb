<h2 class = "text-center text-4xl border-b-2 border-slate-200">Change your password</h2>
<div class ="flex justify-center items-center h-full">
  <div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="flex flex-col  text-white p-4 gap-3">
        <div class="field">
          <%= f.label :password, "New password" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"bg-transparent rounded-full w-60 text-slate-200 font-medium text-lg w-full", placeholder:"*********"%>
        </div>
        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"bg-transparent rounded-full w-60 text-slate-200 font-medium text-lg w-full", placeholder:"*********"%>
        </div>
        <div class="actions">
          <%= f.submit "Change my password", class:"bg-blue-400 w-fit mt-5 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full" %>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
