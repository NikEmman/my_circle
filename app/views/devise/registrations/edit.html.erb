<h2 class = "text-center text-4xl text-white font-semibold border-b-2 border-slate-200">Edit <%= resource_name.to_s.humanize %></h2>
<div class ="flex justify-center items-center h-full">
  <div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="flex flex-col  text-white p-4 gap-3">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"bg-transparent rounded-full w-60 text-slate-200 font-medium text-lg w-full", placeholder:"example@mail.com" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="field">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"bg-transparent rounded-full w-60 text-slate-200 font-medium text-lg w-full", placeholder:"***********"%>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"bg-transparent rounded-full w-60 text-slate-200 font-medium text-lg w-full", placeholder:"***********" %>
        </div>
        <div class="field">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" , class:"bg-transparent rounded-full w-60 text-slate-200 font-medium text-lg w-full", placeholder:"***********" %>
        </div>
        <div class="actions">
          <%= f.submit "Update" , class:"bg-blue-400 w-fit mt-5 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full"%>
        </div>
      </div>
    <% end %>
    <h3 class = "text-center text-3xl border-b-2 border-slate-200">Cancel my account</h3>
    <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete , class:"bg-blue-400 w-fit mt-5 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full" %></div>
    <%= link_to "Back", :back , class:"bg-blue-400 w-fit mt-5 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full"%>
  </div>
</div>
