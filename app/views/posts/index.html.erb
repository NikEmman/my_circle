<div class="grid grid-cols-6 gap-4">
  <div class="col-span-5">
    <div id="new_post", class ="p-4 flex flex-col gap-2"><%= render partial: "shared/form", locals: { model: Post.new } %></div>
    <%if current_user.profile%>
      <div id="posts">
        <% @posts.each do |post|%>
          <%= render partial: "shared/post", locals: { post: post } %>
        <%end%>
      </div>
    <% else%>
      <h1>Welcome to My Circle&trade;!</h1>
      <p><%=link_to "Create a Profile", new_profile_path, class:"rounded-xl bg-slate-600 p-2 text-teal-400 hover:bg-slate-400 hover:text-teal-700"%> to get started!</p>
    <%end%>
  </div>
  <div class= "col-span-1 p-4">
    <ul>Find people to follow:</ul>
    <% User.not_followed_by(current_user).each do |user|%>
      <li><%= link_to "#{user.profile.first_name} #{user.profile.last_name}", profile_url(user.profile) %></li>
    <%end%>
  </div>
</div>
