<h1 class = "text-center text-4xl text-white font-semibold border-b-2 border-slate-200"><%= "#{@post.user.profile.full_name}'s post"%></h1>
<div class="flex-1 flex gap-1 flex-col py-4 pl-4">
  <div class="flex py-4 gap-4">
    <div>
      <%if current_user.profile.avatar.attached?%>
        <%= image_tag current_user.profile.avatar, class: "inline-block h-10 w-10 rounded-full" %>
      <%else%>
        <img src="<%= image_path('default.jpg') %>" alt="default profile picture", class="inline-block h-10 w-10 rounded-full">
      <%end%>
    </div>
    <div id="new_comment" class="row-start-2  w-full col-start-2">
      <%= render partial: "shared/form_comment", locals: { model: [@post, Comment.new]}%>
    </div>
  </div>
  <hr class="border-sky-700 border-4">
  <%= render partial: "shared/post", locals: { post: @post } %>
  <div id="comments">
    <% @post.comments.each do |comment|%>
      <%= render partial: "shared/comment", locals: { comment: comment } %>
    <%end%>
  </div>
</div>
<%= link_to "Home", root_path, class:"bg-blue-400 w-48 mt-5 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-full" %>
